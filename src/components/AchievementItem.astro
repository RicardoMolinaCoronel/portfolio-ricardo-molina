---
import GradientButton from "./GradientButton.astro";
import AwardIcon from "../icons/Award.astro"
import { TAGS } from "./TAGS.astro"

interface Props {
    title: string;
    subtitle: string;
    date: string;
    description: string;
    image: string;
    alt: string;
    tags: typeof TAGS[];
    imageClass: string;
    externalLink: string;
    link?: string;
} 

const { title, subtitle, date, description, image, alt, externalLink, imageClass, link } = Astro.props;
---



<h3 class="flex flex-col items-start gap-2 lg:text-xl text-lg font-semibold text-gray-900 dark:text-white">{title} 
    <span class="lg:text-lg text-base font-light text-gray-500 dark:text-white">{subtitle}</span>   
    <span class="lg:text-sm text-xs font-light text-gray-500 dark:text-gray-300 -mt-2">{date}</span>   
    <div class="h-[2px] bg-gray-300 dark:bg-gray-300 lg:w-[15rem] w-30 mb-2"></div>
</h3>
<div class="flex lg:flex-row flex-col lg:gap-20 gap-5 items-center pt-4">
    <img src={image} alt={alt} class={`lg:w-60 w-50 lg:py-3 py-2 ${imageClass}`}>
    <div class="flex flex-col gap-2">
    <p class="mb-4 text-sm lg:text-base font-normal text-gray-500 dark:text-gray-300 text-pretty">
        {description}
    </p>

    {externalLink && (
        <GradientButton link={externalLink} label="Ver certificado" gradient="bg-gradient-to-r from-gray-900 to-gray-700 hover:bg-gradient-to-r hover:from-gray-800 hover:to-gray-600 transition-colors duration-500"><AwardIcon class="text-gray-700 pl-1"></AwardIcon></GradientButton>
        
    )}
</div>
</div>



