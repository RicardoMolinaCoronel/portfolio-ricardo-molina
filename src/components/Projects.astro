---
import { TAGS } from "./TAGS.astro"
import { useTranslations, getLangFromUrl } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const PROJECTS = [
    {
        title: t.projects.intranet.title,
        description: t.projects.intranet.description,
        image: "/projects/bdp1.webp",
        alt: "Banco del Pacífico",
        tags: [TAGS.swift, TAGS.swiftUI, TAGS.kotlin, TAGS.jetpackCompose, TAGS.xcode, TAGS.androidStudio,TAGS.uikit, TAGS.webkit         
        ],
        imageClass: "lg:w-80 w-60",
        link:"/"
    },
    {
        title: t.projects.analyticsAdmin.title,
        description: t.projects.analyticsAdmin.description,
        image: "/projects/analytics1.webp",
        imageClass: "lg:w-120 w-90",
        alt: "Banco del Pacífico",
        tags: [TAGS.react, TAGS.vite, TAGS.CSS, TAGS.HTML, TAGS.redux, TAGS.express, TAGS.node, TAGS.npm, TAGS.mysql, TAGS.sequelize, TAGS.git, TAGS.github, TAGS.cpanel         
        ],
        link:"/"
    },

    {
        title: t.projects.suplaierWeb.title,
        description: t.projects.suplaierWeb.description,
        image: "/projects/suplaier_web.webp",
        imageClass: "lg:w-120 w-90",
        alt: "Banco del Pacífico",
        tags: [TAGS.react, TAGS.sass, TAGS.CSS, TAGS.HTML, TAGS.node, TAGS.redux, TAGS.express, TAGS.mysql, TAGS.swagger, TAGS.git, TAGS.github, TAGS.npm, TAGS.asana     
        ],
        link:"/"
    },    {
        title: t.projects.suplaierMobile.title,
        description: t.projects.suplaierMobile.description,
        image: "/projects/suplaier_movil.webp",
        imageClass: "lg:w-80 w-60",
        alt: "Banco del Pacífico",
        tags: [TAGS.reactnative, TAGS.CSS, TAGS.redux, TAGS.git, TAGS.github, TAGS.npm, TAGS.asana     
        ],
        link:"/"
    },    
    {
        title: t.projects.clearInventory.title,
        description: t.projects.clearInventory.description,
        image: "/projects/clear_inventory_1.webp",
        imageClass: "lg:w-80 w-60",
        alt: "Clear Inventory",
        tags: [TAGS.java, TAGS.kotlin, TAGS.androidsdk, TAGS.androidStudio, TAGS.firebase, TAGS.rest, TAGS.mvvm ,TAGS.git, TAGS.github 
        ],
        link:"/"
    },    
    {
        title: t.projects.parkinsonResearch.title,
        description: t.projects.parkinsonResearch.description,
        image: "/projects/parkinson.webp",
        imageClass: "lg:w-110 w-80",
        alt: "Parkinson Disease Research",
        tags: [TAGS.python, TAGS.tensorflow, TAGS.keras, TAGS.pytorch, TAGS.matplotlib, TAGS.seaborn, TAGS.scikitLearn, TAGS.jupyter, TAGS.Django, TAGS.sqlite, TAGS.react, TAGS.node, TAGS.vite, TAGS.redux, TAGS.npm, TAGS.git, TAGS.github
        ],
        link:"/"
    },    
    {
        title: t.projects.heartAttackResearch.title,
        description: t.projects.heartAttackResearch.description,
        image: "/projects/heart_attack.webp",
        imageClass: "lg:w-110 w-80",
        alt: "Banco del Pacífico",
        tags: [TAGS.python, TAGS.tensorflow, TAGS.keras, TAGS.matplotlib, TAGS.seaborn, TAGS.scikitLearn, TAGS.jupyter, TAGS.flask, TAGS.react, TAGS.node, TAGS.vite, TAGS.redux, TAGS.npm, TAGS.git, TAGS.github
        ],
        link:"/"
    }
]
---

{
    
    PROJECTS.map(project => (

<article class="flex lg:flex-row flex-col-reverse  gap-2 lg:justify-between items-center lg:pb-10 pb-5">
    <img src={project.image} alt={project.alt} class={`${project.imageClass}`}>
    <div class="flex flex-col gap-2 w-full lg:w-fit">
        <h3 class="flex flex-col items-start gap-2 lg:text-lg text-base font-semibold text-gray-900 dark:text-white">{project.title}    
        <div class="h-[2px] bg-[var(--primary-black)] dark:bg-gray-300 lg:w-25 w-16 mb-2"></div>
    </h3>    <p class="text-pretty lg:w-150 w-full lg:text-base text-sm">{project.description}</p>
    <h4 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mt-7 mb-1">{t.technologiesSTR}
            <div class="h-[2px] bg-[var(--primary-black)] dark:bg-gray-300 w-1/16 mb-2"></div>
        </h4>
    <ul class="flex flex-row flex-wrap gap-2 mt-1 lg:w-150 w-full">
        {
            project.tags.map((tag, index) => (
                <li>                    <span class={`fade-tag opacity-0 translate-y-3 transition-all duration-800 ease-out flex items-center gap-x-2 lg:text-sm text-xs rounded-full px-4 py-1 cursor-crosshair ${tag.class}`}
                    style={`transition-delay: ${index * 100}ms`}

                >
                        <tag.icon class={tag.size} />
                        {tag.name}
                    </span></li>
            ))
        }
    </ul>
    
</div>
</article>
    ))
}